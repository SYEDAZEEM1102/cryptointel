# CryptoIntel — Environment Variables
# Copy to .env and fill in your API keys

# CoinGlass API (derivatives data)
COINGLASS_API_KEY=your_coinglass_api_key_here

# CoinGecko Pro (optional — free tier works but rate-limited)
COINGECKO_API_KEY=your_coingecko_api_key_here

# xAI / Grok API (CT analysis, synthesis)
XAI_API_KEY=your_xai_api_key_here

# Twitter/X API (optional — browser scraping is primary method)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Anthropic Claude API (optional — for AI-powered synthesis)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# CryptoQuant (on-chain analytics)
CRYPTOQUANT_API_KEY=your_cryptoquant_api_key_here

# Glassnode (on-chain analytics)
GLASSNODE_API_KEY=your_glassnode_api_key_here

# Output configuration
OUTPUT_DIR=./output
